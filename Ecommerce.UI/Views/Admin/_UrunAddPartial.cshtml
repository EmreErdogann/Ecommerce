@model Ecommerce.Core.DTos.ProductDTos.ProductAddDto

<div class="modal fade  " tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><span class="fas fa-plus "></span>Ürün Ekle</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="İptal">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Add" id="form-product-add">
                    <input  name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                    <div asp-validation-summary="All" class="text-danger" id="validation-summary" aria-hidden="true" style="display: none;"></div>
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input class="form-control" asp-for="Name" />
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ImageUrl"></label>
                        <input class="form-control" asp-for="ImageUrl" />
                        <span class="text-danger" asp-validation-for="ImageUrl"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price"></label>
                        <input class="form-control" asp-for="Price" />
                        <span class="text-danger" asp-validation-for="Price"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CategoryId"></label>
                     
                        @Html.DropDownListFor(ı => ı.CategoryId, new SelectList(@ViewBag.Categories , "Id", "Name"), "Lütfen Kategoriyi Seçiniz", new { @class = "form-group form-control" })

                        <span class="text-danger" asp-validation-for="CategoryId"></span>

                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn-block" data-dismiss="modal"><span class="fas fa-times"></span> İptal</button>
                <button type="button" class="btn btn-primary btn-block" id="btnSave"><span class="fas fa-save"></span>Kaydet</button>
            </div>
        </div>
    </div>
</div>
