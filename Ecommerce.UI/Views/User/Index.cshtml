@model AppUserSignInModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="GirisYap" method="post" class="w-55 mx-auto p-3 shadow">
    <div class="form-group">
        <label asp-for="UserName"></label>
        <span asp-validation-for="UserName" class="text-danger"></span>
        <input asp-for="UserName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <span asp-validation-for="Password" class="text-danger"></span>
        <input asp-for="Password" class="form-control" />
    </div>
    <div class="form-check">
        <input type="checkbox" asp-for="RememberMe" class="form-check-input" />
        <label asp-for="RememberMe" class="form-check-label"></label>
    </div>
    <a asp-action="KayıtOl" class="btn btn-warning btn-sm">Kayıt Ol</a>
    <input type="submit" class="btn btn-info btn-sm" value="Giriş Yap" />
</form>

